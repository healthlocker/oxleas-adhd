<h2 class="tc">Caseload</h3>

<h3 class="mv4">Healthlocker users</h3>
<div class="cf">
  <%= for user <- @hl_users do %>
    <%= link to: caseload_user_room_path(@conn, :show, user, room_for(user)),
            class: "no-underline hl-dark-blue cf" do %>
      <div class="w-100 hl-bg-light-aqua pa3 mv1 br3 hl-dark-blue justify-between">
        <p class="b di"><%= App.ComponentView.full_name(user) %></p><span class="fr hl-pink fw9">></span>
      </div>
    <% end %>

    <%= for carer <- user.carers do %>
      <%= link to: caseload_user_room_path(@conn, :show, carer, room_for(carer)),
              class: "no-underline hl-dark-blue cf" do %>
        <div class="w-80 pa3 mv1 b--hl-yellow ba bw1 br3 hl-dark-blue ml-20 flex justify-between">
          <p class="b di mv0"><%= App.ComponentView.full_name(carer) %> <span class="normal i">(friend/family/carer)</span></p><span class="hl-pink fw9">></span>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<h3 class="pt4 pb3 b--hl-grey bt bw1">Users not signed up to Healthlocker</h3>
<%= for user <- @non_hl do %>
  <div class="w-100 hl-bg-grey pa3 mv2 br3 hl-dark-blue">
       <p class="b di o-50"><%= user."Forename" %> <%= user."Surname" %></p>
   </div>
<% end %>

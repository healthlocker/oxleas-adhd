<div class="bb b--black-20 pb4 mt4">
  <span class="fl mt0">Already an existing user?</span>
  <div class="tr">
    <%= link_to("Log in", to: login_path(@conn, :index)) %>
  </div>
</div>
<div class="br2 mv3 center">
  <%= form_for @changeset, @action, fn f -> %>

  <div class="w-100 flex items-center justify-between">
    <div class="w-40 dib">
      <%= label f, :first_name, "First name (optional)", class: "f5 b db mb2" %>
      <%= text_input f, :first_name, class: "ph3 input-reset bn hl-bg-grey w-100 " <>
      App.ComponentView.highlight_errors(@changeset, :first_name) %>
      <span class="hl-pink"><%= error_tag f, :first_name %></span>
    </div>
    <div class="w-50 dib">
      <%= label f, :last_name, "Last name (optional)", class: "f5 b db mb2" %>
      <%= text_input f, :last_name, class: "ph3 input-reset bn hl-bg-grey w-100 " <>
      App.ComponentView.highlight_errors(@changeset, :last_name) %>
      <span class="hl-pink"><%= error_tag f, :last_name %></span>
    </div>
  </div>

  <div class="form-group">
    <%= label f, :email, class: "f5 b db mb2 mt4" %>
    <%= text_input f, :email, class: "ph3 input-reset bn hl-bg-grey w-100 " <>
    App.ComponentView.highlight_errors(@changeset, :email) %>
    <span class="hl-pink"><%= error_tag f, :email%></span>
  </div>

  <div class="tr mt4">
    <%= submit_primary "Next" %>
  </div>

</div>
<% end %>

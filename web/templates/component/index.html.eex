      <ul class="list pl0 ml0 cf">
        <li class="fl w-100 w-50-m w-25-l mb1">
          <div class="fl w-40 pv4 hl-bg-grey"></div>
          <div class="fl w-60 lh-copy pl2 pt2">
            <b class="db">grey</b>
            <code class="f6">#EBEBEB</code>
          </div>
        </li>
        <li class="fl w-100 w-50-m w-25-l mb1">
          <div class="fl w-40 pv4 hl-bg-dark-blue"></div>
          <div class="fl w-60 lh-copy pl2 pt2">
            <b class="db">dark blue</b>
            <code class="f6">#242F4F</code>
          </div>
        </li>
        <li class="fl w-100 w-50-m w-25-l mb1">
          <div class="fl w-40 pv4 hl-bg-dark-grey"></div>
          <div class="fl w-60 lh-copy pl2 pt2">
            <b class="db">dark grey</b>
            <code class="f6">#242F4F</code>
          </div>
        </li>
        <li class="fl w-100 w-50-m w-25-l mb1">
          <div class="fl w-40 pv4 hl-bg-pink"></div>
          <div class="fl w-60 lh-copy pl2 pt2">
            <b class="db">pink</b>
            <code class="f6">#EC4067</code>
          </div>
        </li>
        <li class="fl w-100 w-50-m w-25-l mb1">
          <div class="fl w-40 pv4 bg-white"></div>
          <div class="fl w-60 lh-copy pl2 pt2">
            <b class="db">white</b>
            <code class="f6">#FFFFFF</code>
          </div>
        </li>
        <li class="fl w-100 w-50-m w-25-l mb1">
